{
  "name": "opencollective-emails",
  "version": "0.8.1",
  "description": "Open Collective Emails",
  "private": true,
  "scripts": {
    "watch": "NODE_ENV=development webpack --mode development --watch --progress --colors",
    "build": "webpack --mode production",
    "dev": "NODE_ENV=development nodemon index",
    "start": "node index",
    "commit": "git-cz",
    "pretest": "npm run lint && npm run prettier:check",
    "test": "jest",
    "test:update": "jest --updateSnapshot",
    "deploy:production": "git push production master",
    "deploy:staging": "git push staging master",
    "lint": "eslint \"*.js\"",
    "lint:fix": "npm run lint -- --fix",
    "lint:quiet": "npm run lint -- --quiet",
    "prettier": "prettier \"*.@(js|json|md)\"",
    "prettier:write": "npm run prettier -- --write",
    "prettier:check": "npm run prettier -- --list-different",
    "link-eymail": "./scripts/link-eymail.sh"
  },
  "engines": {
    "node": "11.8.0",
    "npm": "6.5.0"
  },
  "dependencies": {
    "@eymail/editor": "^0.8.1",
    "@opencollective/eymail-components": "^0.8.1",
    "express": "^4.16.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-resolver": "^3.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.4",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^5.16.0",
    "eslint-config-opencollective": "^2.0.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^9.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^2.2.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.11",
    "prettier": "^1.16.4",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test/setup.js"
    ]
  }
}
